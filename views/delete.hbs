

<ul class="noBullet">
  <div class = "row eachBook">
    <div class = "col s4 m4 l4">
      <li>
        <img class="book" src={{cover}}></img>
      </div>
        <h4 id="bookTitle{{id}}">{{title}}</h4>
        <p>{{description}}</p>
        <p>Genre: {{genre}}</p>
      </li>
      <form action="/books/{{id}}?_method=DELETE" method="post">
        <button  type="submit" class="deleteButton waves-effect red btn-large"><i class="material-icons left">mode_edit</i>Delete</button>
      </form>
  </div>
</ul>
